# Update Fresh
fresh freshshell/fresh bin/fresh --bin

# Use Fresh to create .bash_profile and .bashrc
# They will contain a single line of code to source the .freshrc file
fresh freshshell/fresh contrib/source-build.sh --file=~/.bash_profile
fresh freshshell/fresh contrib/source-build.sh --file=~/.bashrc


# Use Fresh to source in aliases, paths, bash config, rbenv
fresh shell/aliases/\*
fresh shell/completions/\*
fresh shell/functions/\*
fresh shell/path/\*
fresh shell/bash.sh
fresh shell/prompt.sh
fresh shell/bash_other.sh
fresh shell/rbenv.sh


# Source in some app-specific completion scripts for bash
fresh freshshell/fresh contrib/completion/fresh-completion.bash
fresh bobthecow/git-flow-completion git-flow-completion.bash


# Install .gitconfig via fresh
fresh config/gitconfig --file=~/.gitconfig


# Vim
fresh-options --file=~/.vimrc --marker=\"
    #  fresh config/vim/leader.vim
    fresh twe4ked/dotfiles vim/vundle_before.vim
    fresh config/vim/vundle.vim
    #  fresh config/vim/plugins/\*.vim
    #  fresh config/vim/config/\*.vim
    #  fresh config/vim/functions.vim
    #  fresh config/vim/mappings.vim
    #  fresh config/vim/mappings/\*.vim
    #  fresh config/vim/auto_commands.vim
    #  fresh hackling/dotfiles vim/plugins/surround.vim
    fresh twe4ked/dotfiles vim/vundle_after.vim
    fresh config/vim/global.vim
fresh-options

fresh config/vim/gvimrc --file
fresh config/vim/colors --file=~/.vim/colors/
fresh config/vim_init.sh


# Bundler
fresh config/bundle --file=~/.bundle/


# Symlink scripts(bin) folder
fresh scripts/\* --bin


# Create iTerm preferences file
if [ ! -f "~/Library/Preferences/com.googlecode.iterm2.plist" ]; then
  # t fresh other/com.googlecode.iterm2.plist --file=~/Library/Preferences/com.googlecode.iterm2.plist
fi


